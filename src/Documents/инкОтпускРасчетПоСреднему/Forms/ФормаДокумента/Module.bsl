	РасчетСтруктура.Вставить("ДниОтпуск",Объект.ОсновнойОтпускДни);
	РасчетСтруктура.Вставить("ДниДополнительныйОтпуск",Объект.ДополнительныйОтпускДни);
	РасчетСтруктура.Вставить("МесяцОтпуск",Объект.МесяцНачисления);
